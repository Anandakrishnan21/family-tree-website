<%- include('partials/header2', { firstName: firstName }) %>
<link rel="stylesheet" href="./css/personal.css">
<div class="personal-details">
    <div class="form-container">
        <div class="form-content">
            <div class="personal-right-div">
                <p class="heading">My Account</p>
                <p><a href="/personal">Personal Details</a></p>
                <p><a href="#">Security settings</a></p>
                <p><a href="#">Communication preference</a></p>
                <p><a href="#">Privacy</a></p>
                <p><a href="#">Notification</a></p>
                <p><a href="#">Saved tree search</a></p>
                <p><a href="#">Refer a friend</a></p>
            </div>
            <form action="/security" method="post">
                <p class="heading">Security Settings</p>
                <div class="form-groups">
                    <input type="email" placeholder="E-mail" name="username" class="username" value="<%= username %>">
                </div>
                <div class="form-groups">
                    <input type="password" placeholder="Password" name="password" class="password" value="<%= password %>">
                </div>
                <button class="update-btn">Update</button>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
